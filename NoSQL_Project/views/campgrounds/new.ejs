<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Create a new campground!</h1>
    
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" placeholder="title" name="name" type="text">
            </div>
            <div class="form-group">
                <input id="image" class="form-control" placeholder="image.extension" name="image" type="file" accept="image/*" required>
            </div>
            <div class="form-group">
                <textarea style="min-width: 100%; max-width: 100%; min-height: 150px;" name="description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    
</div>

<% include ../partials/footer %>